<UserControl x:Class="GraphView.Port"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraphView"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="40">
    <Canvas>
        <Ellipse x:Name="Connection" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="15" Stroke="Red" VerticalAlignment="Top" Width="15" StrokeThickness="3"/>
        <Label x:Name="NameLabel" Content="Text" Canvas.Left="10" Canvas.Top="-6" Foreground="#FFCFCFCF"></Label>
    </Canvas>
</UserControl>
